<% content_for :page_title do %>
  <%= Spree.t(:editing_store) %> / <%= @store.url %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_stores_list), admin_stores_path, class: 'btn-primary', icon: 'arrow-left' %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_store_tabs">
    <%= content_tag :li, class: ('active' if current == :general) do %>
      <%= link_to_with_icon 'edit', Spree.t(:general), edit_admin_store_path(@store) %>
    <% end %>
    <%= content_tag :li do %>
      <%= link_to_with_icon 'globe', Spree.t(:translation), admin_translations_path('stores',@store.id) %>
    <% end %>
  </ul>
<% end %>
